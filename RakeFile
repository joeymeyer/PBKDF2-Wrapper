require 'colorize'

namespace :test do
  
  desc "Prepare repository for tests to be run"
  task :prepare do
    sh('cd Tests && bundle exec pod install')
  end
  
end

desc "Run all PBKDF2-Wrapper Tests"
task :test do
  sh("xcodebuild -workspace PBKDF2-Wrapper.xcworkspace -scheme 'PBKDF2-Wrapper Tests' -sdk 'iphonesimulator' -destination 'platform=iOS Simulator,name=iPhone 7,OS=10.0' -configuration Release clean test | bundle exec xcpretty -c ; exit ${PIPESTATUS[0]}") rescue nil
  if $?.success?
    puts "PBKDF2-Wrapper Tests passed".green
  else
    puts "PBKDF2-Wrapper Tests failed".red
    exit $?.exitstatus
  end
end

task :default => 'test'
